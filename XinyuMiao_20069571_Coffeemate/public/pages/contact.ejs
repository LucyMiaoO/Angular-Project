<div class="jumbotron text-center">
    <h1>Contact Us</h1>

    <h2>{{ message }}</h2>

    <br />
    <br />
    <div ng-controller="contactController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="sendReview()">
                    <div class="form-group" align="left">
                        <label>Email:</label>
                        <input type="email"
                               class="form-control"
                               placeholder="Your email"
                               ng-model="formData.email"/>
                    </div>
                    <div class="form-group" align="left">
                        <label>Review:</label>
                        <textarea
                               class="form-control"
                               placeholder="Send your review to us!"
                               ng-model="formData.review"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" >Submit</button>
                </form>

            </div>
        </div>
    </div>
</div>